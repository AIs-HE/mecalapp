{
    "info": {
        "_postman_id": "mecalapp-collection-0001",
        "name": "MecalApp - Supabase & API Tests",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Collection for testing local API routes and direct Supabase REST endpoints. Replace environment variables before running."
    },
    "item": [
        {
            "name": "GET /api/projects",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{local_base_url}}/api/projects",
                    "host": [
                        "{{local_base_url}}/api/projects"
                    ]
                }
            }
        },
        {
            "name": "POST /api/projects",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Postman Test Project\",\n  \"client_id\": \"11111111-1111-1111-1111-111111111111\"\n}"
                },
                "url": {
                    "raw": "{{local_base_url}}/api/projects",
                    "host": [
                        "{{local_base_url}}/api/projects"
                    ]
                }
            }
        },
        {
            "name": "GET Supabase REST /projects",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "apikey",
                        "value": "{{SUPABASE_ANON_KEY}}"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{SUPABASE_ANON_KEY}}"
                    }
                ],
                "url": {
                    "raw": "{{SUPABASE_URL}}/rest/v1/projects",
                    "host": [
                        "{{SUPABASE_URL}}/rest/v1/projects"
                    ]
                }
            }
        }
    ],
    "event": [],
    "variable": [
        {
            "key": "local_base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "SUPABASE_URL",
            "value": "https://your-project-ref.supabase.co",
            "type": "string"
        },
        {
            "key": "SUPABASE_ANON_KEY",
            "value": "",
            "type": "string"
        }
    ]
}